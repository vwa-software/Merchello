@inherits UmbracoViewPage<ETC.B2B.WEB.Models.Member.MemberActivationModel>
@* 
	This view renders the mail, when a new user is created through the etc-import
	Best practice to test is use the ResetEmailTemplate, and reset your password, then copy the layout to this view.
*@

@{
	Layout = "EmailTemplateMaster.cshtml";

	string hostname = System.Web.HttpContext.Current.Request.Url.Scheme + "://" + System.Web.HttpContext.Current.Request.Url.Authority;

}
        <table cellspacing="0" cellpadding="0" width="600" class="w320">
          <tr>
            <td class="header-lg">Hello @Model.Member.Name,<br />
            </td>
          </tr>
          <tr>
            <td class="free-text">
An account is created for you, you can activate your account by setting your password through the following link:
@*
	reset-password is the umbraco node where the reset password action link is called, of course you can change this to the desired page
*@
<br />
              </td>
          </tr>
          <tr>
            <td class="button">
              <div><a class="btn btn-grid" href="@(hostname)/reset-password/@Model.ActivationLink"
              style="
    background: #fff;
    border: 1px solid #929292;
    border-radius: 20px;
    text-transform: uppercase;
    font-size: 0.8em!important;
    font-weight: 800;
    padding: 3px 10px 2px 10px!important;
    padding: 2px 30px 3px 30px!important;
    color: #444;line-height:45px;text-align:center;text-decoration:none;width:155px;-webkit-text-size-adjust:none;mso-hide:all;">@(hostname)/forgotpassword/@Model.ActivationLink</a></div>
            </td>
          </tr>
          <tr>
            <td class="free-text">Best regards,<br />
            HKliving
              </td>
          </tr>
        </table>